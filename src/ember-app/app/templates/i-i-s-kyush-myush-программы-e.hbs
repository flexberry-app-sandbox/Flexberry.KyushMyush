<h3 class="ui header">{{t "forms.i-i-s-kyush-myush-программы-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.название
      class=(if (v-get validationModel "название" "isInvalid") "error")
      label=(t "forms.i-i-s-kyush-myush-программы-e.название-caption")
      data-test-i-i-s-kyush-myush-программы-e-название=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "название" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.описание
      class=(if (v-get validationModel "описание" "isInvalid") "error")
      label=(t "forms.i-i-s-kyush-myush-программы-e.описание-caption")
      data-test-i-i-s-kyush-myush-программы-e-описание=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "описание" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.версия
      class=(if (v-get validationModel "версия" "isInvalid") "error")
      label=(t "forms.i-i-s-kyush-myush-программы-e.версия-caption")
      data-test-i-i-s-kyush-myush-программы-e-версия=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "версия" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.размер
      class=(if (v-get validationModel "размер" "isInvalid") "error")
      label=(t "forms.i-i-s-kyush-myush-программы-e.размер-caption")
      data-test-i-i-s-kyush-myush-программы-e-размер=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "размер" "message")}}
  </div>
  <div class="field" data-test-i-i-s-kyush-myush-программы-e-едИзмерения="true">
    <label>{{t "forms.i-i-s-kyush-myush-программы-e.едИзмерения-caption"}}</label>
    {{flexberry-dropdown
      items=(flexberry-enum "i-i-s-kyush-myush-ед-изм")
      value=model.едИзмерения
      class=(if (v-get validationModel "едИзмерения" "isInvalid") "error")
      readonly=readonly
    }}
    {{flexberry-validationmessage error=(v-get validationModel "едИзмерения" "message")}}
  </div>
</form>
